<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:visibility="visible">

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.30000007dip"
            android:layout_alignParentBottom="true"
            android:background="#ffcccccc" />

        <TextView
            android:id="@+id/tv_title_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:drawablePadding="5.0dip"
            android:text=""
            android:textColor="@color/title_background"
            android:textSize="@dimen/txt_size_title" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dimen_size_15"
            android:paddingRight="@dimen/dimen_size_15"
            android:src="@drawable/icon_return_nor" />
    </RelativeLayout>

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/sliding_tabs"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_40dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        tl:tl_divider_padding="13dp"
        tl:tl_indicator_color="@color/theme_font_color"
        tl:tl_indicator_gravity="BOTTOM"
        tl:tl_tab_space_equal="true"
        tl:tl_tab_width="65dp"
        tl:tl_textSelectColor="@color/theme_font_color"
        tl:tl_textUnselectColor="@color/titlebar_unselect_color"
        tl:tl_textsize="16sp"
        tl:tl_underline_color="#1A000000"
        tl:tl_underline_gravity="TOP"
        tl:tl_underline_height="0.5dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.30000007dip"
        android:background="#ffcccccc" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_home"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</LinearLayout>